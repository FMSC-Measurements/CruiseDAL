<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup Label="Assembly Info">
    <AssemblyName>FMSC.ORM.Legacy</AssemblyName>
    <Version>1.1.2</Version>
    <RootNamespace>FMSC.ORM</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Label="Build Config">
    <TargetFrameworks>net40</TargetFrameworks>
    <!--Dont generate assembly info because we will use same assembly info from VS2008-->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <DefineConstants>$(DefineConstants);SYSTEM_DATA_SQLITE;LEGACY</DefineConstants>
  </PropertyGroup>

  <!--Required for System.Data.Sqlite See: https://stackoverflow.com/questions/32639630/sqlite-interop-dll-files-does-not-copy-to-project-output-path-when-required-by-r/32639631#32639631-->
  <PropertyGroup>
    <ContentSQLiteInteropFiles>true</ContentSQLiteInteropFiles>
    <CopySQLiteInteropFiles>false</CopySQLiteInteropFiles>
    <CleanSQLiteInteropFiles>false</CleanSQLiteInteropFiles>
    <CollectSQLiteInteropFiles>false</CollectSQLiteInteropFiles>
  </PropertyGroup>

  <ItemGroup Label="PackageReferences">
    <PackageReference Include="System.Data.SQLite.Core" Version="1.0.108" />
    <PackageReference Include="Backpack.SqlBuilder" Version="1.0.23" />
  </ItemGroup>

  <ItemGroup Label="Exclude All NetCF">
    <Compile Remove="NetCF\**" />
    <EmbeddedResource Remove="NetCF\**" />
    <None Remove="NetCF\**" />
  </ItemGroup>

  <ItemGroup Label="Include All Code Files from FMC.ORM">
    <Compile Include="..\FMSC.ORM\**\*.cs" Exclude="..\FMSC.ORM\obj\**\*.cs;..\FMSC.ORM\bin\**\*.cs;..\FMSC.ORM\*~\**\*.cs;..\FMSC.ORM\.*\**\*.cs" />
  </ItemGroup>
</Project>